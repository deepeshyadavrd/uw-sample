function checkSubmitCookie(cookieName) {
    let name = cookieName + "=";
    let decoded = decodeURIComponent(document.cookie);
    let arr = decoded.split(';');

    for (let i = 0; i < arr.length; i++) {
        let c = arr[i].trim();
        if (c.indexOf(name) === 0) {
            return true;     // cookie found → block
        }
    }
    return false; // no cookie → allow
}

