<script>
    function submitFrachiseRequest(idd,btn){
        const form = $('#' + idd);
        const button = document.getElementById(btn);
        const formData = form.serializeArray();
        let hasInvalidInput = false;

        let restrictedWords = ['test', 'example', 'xxx', 'sperm', 'sex'];

        $('.field-error').remove();
        $('.success-popup2').remove();

        formData.forEach(field => {
            const value = field.value.toLowerCase();
            restrictedWords.forEach(word => {
                if (value.includes(word)) {
                    form.find(`[name="${field.name}"]`).after(`<div class="field-error text-danger small">Invalid input detected: ${word}</div>`);
                    hasInvalidInput = true;
                }
            });
        });

        if (hasInvalidInput) return;

        const email = $('#emailAddress').val().toLowerCase().trim();
        const phone = $('#phoneNumber').val().trim();
        const emailKey = `franchise_email_${email}`;
        const phoneKey = `franchise_phone_${phone}`;

        // Check if already submitted with this email or phone
        if (localStorage.getItem(emailKey) || localStorage.getItem(phoneKey)) {
            $('body').prepend(`<div class="success-popup2"> 
                <span class="warrning-svg"> 
                    <svg id="smile2" width="35" height="35" viewBox="0 0 27 27" fill="none">  
                        <path d="M13.6154 0.84668C6.57223 0.84668 0.846741 6.60249 0.846741 13.6733C0.846741 20.7464 6.60033 26.5 13.6734 26.5C20.7464 26.5 26.5 20.7464 26.5 13.6733C26.5 6.59806 20.7183 0.84668 13.6154 0.84668ZM14.406 19.3366H12.9407V17.8713H14.406V19.3366ZM14.406 14.406H12.9407V8.01H14.406V14.406Z" stroke="#FFD1D1"/>     
                    </svg>  
                </span> 
                <span class="warrning-text">  
                    <p>This email or phone has already been used.</p> 
                </span> 
            </div>`);
            return; // Stop form submission
        }
        // If no invalid input, submit the form
        if (!hasInvalidInput) {
            button.disabled = true;
            button.innerText = "Submitting..."; // Optional: show progress
            $.ajax({
                type: 'POST',
                url: '?route=common/franchise/sendtodb',
                data: $('#'+idd).serialize(),
                success: function(res) {
                    
                if (res.success) {
                    localStorage.setItem(emailKey, 'submitted');
                    localStorage.setItem(phoneKey, 'submitted');
                    button.remove();
                    form.html(`<div class="ThankuMsgx text-center">
                        <img src="catalog/view/javascript/assets/image/check-sml.gif" style="width: 136px;" loading="lazy"><br>
                        <h2 class="text-success">Success!</h2>
                        <p>Our team will contact you shortly.</p>
                    </div>`);
                } else if (res.errors) {
                    for (const key in res.errors) {
                        form.find(`[name="${key}"]`).after(`<div class="field-error text-danger small">${res.errors[key]}</div>`);
                        
                    }
                    button.disabled = false;
                    button.innerText = "Submit Application";
                } else if (res.error) {
                    $('body').prepend(`<div class="success-popup2">‚ö† ${res.error}</div>`);
                    button.disabled = false;
                    button.innerText = "Submit Application";
                }
                
                },
                error: function(xhr) {
                    try {
                        const response = JSON.parse(xhr.responseText);
                        if (response.errors) {
                            // Get the first error message
                            const firstErrorMessage = Object.values(response.errors)[0];
                            $('body').prepend(`<div class="success-popup2">
                                <span class="warrning-svg">
                                    <svg id="smile2" width="35" height="35" viewBox="0 0 27 27" fill="none">  
                                <path d="M13.6154 0.84668C6.57223 0.84668 0.846741 6.60249 0.846741 13.6733C0.846741 20.7464 6.60033 26.5 13.6734 26.5C20.7464 26.5 26.5 20.7464 26.5 13.6733C26.5 6.59806 20.7183 0.84668 13.6154 0.84668ZM14.406 19.3366H12.9407V17.8713H14.406V19.3366ZM14.406 14.406H12.9407V8.01H14.406V14.406Z" stroke="#FFD1D1"/>     
                            </svg> 
                                </span>
                                <span class="warrning-text">
                                    <p>${firstErrorMessage}</p>
                                </span>
                            </div>`);
                        } else {
                            showGenericError();
                        }
                    } catch (e) {
                        showGenericError();
                    }
                    button.disabled = false;
                    button.innerText = "Submit Application";
                    function showGenericError() {
                        $('body').prepend(`<div class="success-popup2">
