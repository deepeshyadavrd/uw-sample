                            <img src="{{ cs.image }}" class="img-responsive img-fluid ">
                        </div>
                        <div class="client-content">
                            <div class="client-name">
                                <p>
                                    {{ cs.author }}
                                    <span>( {{ cs.city }} )
                                    </span>
                                </p>
                            </div>
                            <div class="client-comment">
                                <p>{{ cs.text }}</p>
                                <div class="rating">
                                {% for i in 1..cs.rating %}
                                    <span><i class='bx bxs-star rst'></i></span>
                                {% endfor %}
                                    
                                </div>
