<script> /**  
		* Call this function when a user clicks on a product link. This function uses the event  
		* callback datalayer variable to handle navigation after the ecommerce data has been sent  
		* to Google Analytics.  * @param {Object} productObj An object representing a product.  
		*/ 
		{# function productObj{{ product.product_id }}() {   
      event.preventDefault(); // Prevent default navigation
		dataLayer.push({      
		'event': 'productClick',   
		'ecommerce': {        
		'click': {         
		// 'actionField': {'list': 'Home products'},       // Optional list property.         
		'products':  [{            
		'name': '{{ product.name }}',                      // Name or ID is required.           
		'id': {{ product.product_id }},           
		'price': {{ product.special_number }}                              
		}]        
		}      
		},       
		'eventCallback': function() {        
		window.open('{{ product.href }}', '_blank');
		}    
		}); 
		}

    function productTocart{{ product.product_id }}() {
      gtag("event", "add_to_cart", {
          currency: "INR",
          value: {{ product.special_number }},
          items: [
            {
              item_id: "{{ product.product_id }}",
              item_name: "{{ product.name }}",
              item_brand: "Urbanwood",
              item_category: "Furniture",
              price: {{ product.special_number }},
              quantity: 1
            }
          ]
        });

        fbq('track', 'AddToCart', {
          currency: 'INR',
          value:{{ product.special_number }},
          content_ids: '{{ product.product_id }}',
          content_type: 'product'
        });
		} #}
		</script>
   {% endfor %}