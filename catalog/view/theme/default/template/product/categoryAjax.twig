       <div class="pd-name"><a href="{{ product.href }}"  target="_blank"  style="cursor: pointer">{{ product.name }}</a></div> 
       {# onclick="productObj{{ product.product_id }}();" #}
       {% if product.finish %}
        <div class="pd-config">{{ product.finish }}</div>
        {% endif %}
        <span class="pd-creater"> By&nbsp;{{ product.brand }}</span>
      </div>
      <div class="color-feature">
      {% if (product.stock_status == 'Out Of Stock') and (product.quantity == 0) %}
