<script>
        

 filters = {{ products | json_encode | raw }};
          


for(var i = 0; i < filters.length; i++) {
    var obj = {};
    obj['name'] = filters[i]['name'];
    obj['id'] = filters[i]['product_id'];
    obj['image'] = filters[i]['thumb'];
    obj['price'] = filters[i]['special'];
    obj['link'] = filters[i]['href'];
    itemsList.push(obj);
}

          </script>
