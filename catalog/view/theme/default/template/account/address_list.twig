    .uw-btn-outline { background:#fff; color:#d70909; border:1px solid #d70909; border-radius:999px; padding:8px 14px; text-decoration:none; }
    .uw-btn-ghost { background:#fff; color:#333; border:1px solid #ddd; border-radius:999px; padding:8px 14px; text-decoration:none; }
    .uw-btn-danger { background:#fff; color:#b91c1c; border:1px solid #b91c1c; border-radius:999px; padding:8px 14px; text-decoration:none; }
