<div class="container py-4">
  <div class="row">
  <div class="col-lg-2 col-md-4 col-sm-12 pt-lg-0 pt-sm-5">
    <div class="user-panel ">

      <ul class="nav flex-column nav-pills user-panel-list me-3" id="v-pills-tab" role="tablist">
        <li><a href="" class="active">My Profile</a></li>
        <li><a href="" >My Orders</a></li>
      </ul>

      <div class="log-out-btn">
        <a href=""> LOGOUT </a>
      </div>
    </div>
  </div>
  <div class="col-lg-10 col-md-8 col-sm-12 ">
  <div class="user-panel-box">
    <!-- Header with Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="uw-title">My Addresses</h1>
      <a href="{{ add }}" class="uw-btn-primary">
        <i class="fa fa-plus"></i> Add New Address
      </a>
    </div>
    {% if addresses %}
      <!-- Address Cards Grid -->
      <div class="row g-3">
        <!-- Address Card Example -->
        {% for result in addresses %}
        <div class="col-md-6 col-lg-4">
          <div class="uw-card h-100">
            <div class="d-flex justify-content-between mb-2">
              <strong>{{ result.name }}</strong>
              {% if result.default %}
                <span class="uw-badge-default">Default</span>
              {% endif %}
            </div>
            <div class="mb-3">
              {{ result.address|raw }}
            </div>
            <div class="d-flex flex-wrap gap-2">
              {% if not result.default %}
                <a href="{{ result.set_default }}" class="uw-btn-outline">
                  <i class="fa fa-star"></i> Set Default
                </a>
              {% endif %}
              <a href="{{ result.update }}" class="uw-btn-ghost"><i class="fa fa-edit"></i> Edit</a>
              <a href="{{ result.delete }}" class="uw-btn-danger"><i class="fa fa-trash"></i> Delete</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
  {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      </div>
      </div>
</div>
