     ajaxUrl += '&filter='+pfilter;
   }

   if(typeof(porder)!='undefined'){
     ajaxUrl += '&order='+porder;
   }
    
  if(typeof(pr)!='undefined'){
     ajaxUrl += '&pr='+pr;
   }

   $.ajax({
      url: ajaxUrl,
      dataType: 'html',
      success: function(html) {
        if(html.length != 0){
        page = page+1
        $('#product_box').append(html);
        plock=1;
        }else{
          plock=0;
        }

      },
      error: function(xhr, ajaxOptions, thrownError) {
       alert('Loading....');
     }
   });
  }
