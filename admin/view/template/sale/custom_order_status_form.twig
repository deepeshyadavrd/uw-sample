{{ header }}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ heading_title }}</div>
        <div class="card-body">
          {% if error_warning %}
            <div class="alert alert-danger">{{ error_warning }}</div>
          {% endif %}
          {% if success %}
            <div class="alert alert-success">{{ success }}</div>
          {% endif %}
          
          <form action="{{ action }}" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_order_id }}</label>
              <div class="col-sm-10">
                <input type="text" name="order_id" value="{{ order_id }}" class="form-control" readonly />
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_order_status }}</label>
              <div class="col-sm-10">
                <select name="order_status_id" class="form-control">
  {% for order_status in order_statuses %}
    <option value="{{ order_status.order_status_id }}"
      {% if order_status.order_status_id == current_order_status_id %}selected{% endif %}>
      {{ order_status.name }}
    </option>
  {% endfor %}
</select>
              </div>
            </div>
            <div id="tracking-field" style="display:none;">
    <div class="form-group required">
        <label class="col-sm-2 control-label">{{ entry_tracking_id }}</label>
        <div class="col-sm-10">
            <input type="text" name="tracking_id" value="" class="form-control" />
        </div>
    </div>
</div>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-primary">{{ button_submit }}</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
$(document).ready(function() {
    const shippedStatusId = {{ shipped_status_id }};
    
    function toggleTrackingField() {
        if ($('select[name="order_status_id"]').val() == shippedStatusId) {
            $('#tracking-field').show();
            $('input[name="tracking_id"]').prop('required', true);
        } else {
            $('#tracking-field').hide();
            $('input[name="tracking_id"]').prop('required', false);
        }
    }
    
    $('select[name="order_status_id"]').change(toggleTrackingField);
    toggleTrackingField(); // Initial check
});
</script>
{{ footer }}